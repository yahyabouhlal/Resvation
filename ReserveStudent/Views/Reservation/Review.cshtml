@model ReserveStudent.Models.Reservation

@{
    ViewData["Title"] = "Review";
}

<h1>Review</h1>

<div>
    <h4>Reservation</h4>
    <hr />
    <dl class="row">
       
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RequestingStudent.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RequestingStudent.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RequestingStudent.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RequestingStudent.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
</div>
<div>

    @if (Model.Status == null)
    {
        <a class="btn btn-success" asp-action="ApprouveRequest" asp-route-id="@Model.Id"><i class="fa fa-check"></i>Approuve</a>
        <a class="btn btn-danger" asp-action="RejectRequest" asp-route-id="@Model.Id"><i class="fa fa-remove"></i>Reject</a>
    }
    <a class="btn btn-outline-dark" asp-action="Index">
        <i class="fa fa-arrow-left"></i> Back to List
    </a>
</div>
